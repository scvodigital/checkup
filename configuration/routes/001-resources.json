{
  "name": "checkup_resources",
  "pattern": "/checkup/resources",
  "tasks": [
    "context.metaData.commonTasks.currentSite",
    {
      "name": "supplimentaryResponses",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": [
          {
            "name": "resources",
            "index": "{$../data/elasticsearch-index.txt}",
            "type": "scvo-resource",
            "template": ">context.metaData.handlebars.queries.resources"
          }
        ]
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.head-tags",
              "body": ">context.metaData.handlebars.templates.checkup_resources"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}