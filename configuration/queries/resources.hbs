{
  "size": 100,
  "_source": [
    "title",
    "content",
    "author_attribution",
    "link",
    "post_tags",
    "post_tags_slug"
  ],
  "query": {
    "bool": {
      "must": [
        {{#compare @root.data.currentSite.name "cyber"}}
        {
          "term": {
            "post_tags_slug": "cyber-resilience"
          }
        },
        {{/compare}}
        {{#compare @root.data.currentSite.name "skills"}}
        {
          "term": {
            "post_tags_slug": "essential-digital-skills"
          }
        },
        {{/compare}}
        {
          "terms": {
            "post_tags_slug": [
              {{#compare @root.data.currentSite.name "skills"}}
              "foundation-skills",
              "communicating",
              "transacting",
              "handling-information-and-content",
              "problemsolving",
              "beingsafelegalandconfident"
              {{else}}
              {{#compare @root.data.currentSite.name "housing"}}
              "technology-enabled-care",
              {{/compare}}
              "content-marketing-data",
              "cyber-resilience",
              "tools-equipment",
              "leadership",
              "culture",
              "skills"
              {{/compare}}
            ]
          }
        }
      ]
    }
  },
  "sort": {
    "weight": "desc"
  }
}