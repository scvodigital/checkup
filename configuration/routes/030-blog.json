{
  "name": "blog",
  "pattern": "/blog",
  "metaData": {
    "title": "Blog"
  },
  "tasks": [
    "context.metaData.commonTasks.currentSite",
    {
      "name": "primaryResponse",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../data/elasticsearch-index.txt}",
          "type": "scvo-post",
          "template": ">context.metaData.handlebars.queries.blog-posts"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.head-tags-static",
              "body": ">context.metaData.handlebars.templates.blog_blog"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}