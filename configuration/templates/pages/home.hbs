{{#if @root.data.currentSite.sections_heading}}
<div class="container-home-pull v-padding-full sections">
  <div class="container-fluid">
    <div class="container-home">
      <h2 class="mdc-typography--headline3">
        {{{@root.data.currentSite.sections_heading}}}
      </h2>
      <div class="mdc-layout-grid v-padding-full">
        <div class="mdc-layout-grid__inner">
          {{#each @root.data.currentSite.sections}}
            <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-{{#compare @root.data.currentSite.name 'organisation'}}6{{else}}3{{/compare}}-desktop mdc-layout-grid__cell--span-4-tablet mdc-layout-grid__cell--span-4-phone v-margin-full text-center">
              {{!-- {{#if number}}
                <div class="number" style="background-color:#{{color}};">{{number}}</div>
              {{/if}} --}}
              <div class="{{class}} {{shape}}">
                <div class="{{shape}}-content">
                  {{#if (contains icon 'fa-')}}
                    <span class="far {{icon}} fa-4x fa-fw icon{{#if color}} text-{{color}}{{/if}}"></span>
                  {{else}}
                    <img src="{{~>asset_url url=(concat 'images/icon-' icon '@2x.png')~}}" title="{{title}}" class="icon" />
                  {{/if}}
                  <div class="icon-text mdc-typography--headline5 text-center">
                    <strong>{{{title}}}</strong>
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>
{{/if}}
