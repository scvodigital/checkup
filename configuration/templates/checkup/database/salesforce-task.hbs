{{#ifAny (compare @root.data.currentSite.name "housing") (compare @root.request.body.answers-area "scotland")}}
{
  "name": "saveCheckupSession",
  "taskModule": "salesforceApex",
  "renderer": "handlebars",
  "config": {
    {{#compare @root.data.currentSite.name "housing" ~}}
      "connection": "sfhaCheckups",
    {{else}}
      "connection": "scvoMattSandbox",
    {{/compare}}
    "output": "data",
    "method": "POST",
    "body": ">data.salesforceSession",
    "apexClassPath": "/CheckupSession/"
  }
}
{{else}}
{
  "name": "saveCheckupSession",
  "taskModule": "render",
  "renderer": "handlebars",
  "config": {
    "template": "Not saving to Salesforce because submission isn't for SFHA and respondent not in Scotland",
    "output": "data"
  }
}
{{/ifAny}}