{
  "name": "checkup_submit",
  "debug": true,
  "pattern": "/checkup/submit",
  "tasks": [
    "context.metaData.commonTasks.currentSite",
    "context.metaData.commonTasks.getCheckupData",
    {
      "name": "rid",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "template": "{{hash (concat (moment null 'X') '-' (hash @root.request.body.email))}}",
        "output": "data"
      }
    },
    {
      "name": "metrics",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "template": ">context.metaData.handlebars.templates.checkup_scores_metrics",
        "output": "data",
        "parseJson": true
      }
    },
    {
      "name": "recordType",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "template": ">context.metaData.handlebars.templates.checkup_scores_record-type",
        "output": "data"
      }
    },
    {
      "name": "salesforceSession",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "template": ">context.metaData.handlebars.templates.checkup_database_salesforce-session",
        "output": "data",
        "parseJson": true
      }
    },
    {
      "name": "generateSaveCheckupSessionTask",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "template": ">context.metaData.handlebars.templates.checkup_database_salesforce-task",
        "output": "data",
        "parseJson": true
      }
    },
    "data.generateSaveCheckupSessionTask",
    {
      "name": "scoresIndividual",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "template": ">context.metaData.handlebars.templates.checkup_scores_gather",
        "output": "data",
        "parseJson": true
      }
    },
    {
      "name": "scoresCombined",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "template": ">context.metaData.handlebars.templates.checkup_scores_calculate",
        "output": "data",
        "parseJson": true
      }
    },
    {
      "name": "response",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "template": ">context.metaData.handlebars.templates.checkup_database_firebase",
        "output": "data",
        "parseJson": true
      }
    },
    {
      "name": "save_data",
      "taskModule": "firebaseRtbSet",
      "renderer": "handlebars",
      "config": {
        "appName": "digital-checkup",
        "setOrUpdate": "set",
        "pathTemplate": "/submissions/{{@root.data.rid}}/",
        "dataTemplate": ">context.metaData.handlebars.templates.checkup_database_firebase"
      }
    },
    {
      "name": "redirectUrl",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "template": "/checkup/results?rid={{#if @root.data.response.sid}}{{@root.data.response.sid}}{{else}}{{@root.data.rid}}{{/if}}",
        "output": "data"
      }
    },
    {
      "name": "destination",
      "taskModule": "redirect",
      "config": {
        "location": ">data.redirectUrl",
        "statusCode": 301
      }
    }
  ]
}