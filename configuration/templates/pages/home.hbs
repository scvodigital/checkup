          </div>
        </div>
      </div>
    {{else}}
      <div class="container-fluid">
        <div class="container-home v-padding-full">
          <p class="v-margin-full">
            {{@root.data.currentSite.title}} home page
          </p>
          {{!-- <div class="cta v-padding-full">
