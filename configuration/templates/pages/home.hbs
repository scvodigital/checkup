                  <p>
                    <a href="https://{{@root.context.domains.[0]}}">Not a {{@root.data.currentSite.for_singular}}?</a>
                  </p>
                  {{/unless ~}}
                </div>
              </div>
              <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-6-desktop mdc-layout-grid__cell--span-4-tablet mdc-layout-grid__cell--span-4-phone">
                {{#compare @root.data.currentSite.name "housing" ~}}
                <img src="{{~>asset_url url='images/logos/sfha-large.png'~}}" style="max-width: 100%;" />
                {{else}}
                <img src="{{~>asset_url url='images/plot-route@2x.png'~}}" style="max-width: 100%;" />
                {{/compare ~}}
              </div>
            </div>
          </div>
          <div class="mdc-typography--body2 text-center b-margin-full">
            The information you provide will be stored in our database to allow us to analyse responses. Read our full <a href="/privacy">privacy notice</a>.
          </div>
        </div>
      </div>
    </div>
  {{else}}
