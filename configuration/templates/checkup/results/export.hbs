// JSON to CSV Converter
function ConvertToCSV(objArray) {
  var array = typeof objArray != 'object' ? JSON.parse(objArray): objArray;
  var str = '';

  var line = '';
  for (var index in array[0]) {
    if (line != '') line += ','
    line += index;
  }
  str += line + '\r\n';

  for (var i = 0; i < array.length; i++) {
    var line = '';
    for (var index in array[i]) {
      if (line != '') line += ','
      line += array[i][index];
    }
    str += line + '\r\n';
  }

  return str;
}
