{
  "size": 100,
  "_source": [
    "title",
    "content",
    "author_attribution",
    "link",
    "post_tags_slug"
  ],
  "query": {
    "bool": {
      "must": [
        {{#ifAny @root.data.rootResponse.topic @root.request.params.query.topic ~}}
        {{#switch (default @root.data.rootResponse.topic @root.request.params.query.topic) ~}}
        {{#case "leadership" ~}}
        {
          "terms": {
            "post_tags_slug": [
              "leadership",
              "culture",
              "skills"
            ]
          }
        },
        {{/case ~}}
        {{#case "tools" ~}}
        {
          "term": {
            "post_tags_slug": "tools-equipment"
          }
        },
        {{/case ~}}
        {{#case "tec" ~}}
        {
          "term": {
            "post_tags_slug": "technology-enabled-care"
          }
        },
        {{/case ~}}
        {{#case "data" ~}}
        {
          "term": {
            "post_tags_slug": "content-marketing-data"
          }
        },
        {{/case ~}}
        {{#case "cyber" ~}}
        {
          "term": {
            "post_tags_slug": "cyber-resilience"
          }
        },
        {{/case ~}}
        {{/switch ~}}
        {{/ifAny ~}}
        {
          "terms": {
            "post_tags_slug": [
              "content-marketing-data",
              "cyber-resilience",
              "tools-equipment",
              "leadership",
              "culture",
              "skills",
              "technology-enabled-care"
            ]
          }
        }
      ]
    }
  },
  "sort": {
    "weight": "desc"
  }
}