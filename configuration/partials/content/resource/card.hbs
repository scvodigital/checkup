<div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-4-desktop mdc-layout-grid__cell--span-4-tablet mdc-layout-grid__cell--span-4-phone checkup-topic-resources checkup-topic-resources-{{> checkup_topic slug=slug}}">
  <div class="mdc-card mdc-elevation--z3">
    <div class="mdc-card__title x-padding-full">
      <div class="mdc-typography--headline5">
        <a href="{{link}}">{{{title}}}</a>
      </div>
    </div>
    <div class="mdc-card__primary r-padding-full l-padding-full t-padding">
      {{#compare author "!==" title ~}}
      <div class="mdc-typography--body1 b-margin">
        <strong>{{{author}}}</strong>
      </div>
      {{/compare ~}}
      <div class="mdc-typography--body1">
        {{{content}}}
      </div>
    </div>
    <div class="mdc-card__actions">
      <div class="b-padding-full r-padding-full l-padding-full">
        <a href="{{link}}" class="mdc-card__action">Read more</a>
      </div>
    </div>
  </div>
</div>
