{{#ifAny (compare @root.data.currentSite.type "skills") (compare @root.data.currentSite.type "organisation") (compare @root.data.currentSite.name "cyber") (compare @root.data.currentSite.name "housing") (ifAll (ifAny (compare @root.data.currentSite.name "default") (compare @root.data.currentSite.name "default")) (compare @root.request.body.answers-area "scotland")) ~}}
{
  "name": "saveCheckupSession",
  "taskModule": "salesforceApex",
  "renderer": "handlebars",
  "config": {
    {{#compare @root.data.currentSite.name "housing" ~}}
      "connection": "sfhaCheckups",
    {{else}}
      "connection": "scvoProduction",
    {{/compare}}
    "output": "data",
    "method": "POST",
    "body": ">data.salesforceSession",
    "apexClassPath": "/CheckupSession/"
  }
}
{{else}}
{
  "name": "saveCheckupSession",
  "taskModule": "render",
  "renderer": "handlebars",
  "config": {
    "template": "Not saving to Salesforce because submission isn't for SFHA, Cyber, Skills, or Digital Organisations respondent not in Scotland",
    "output": "data"
  }
}
{{/ifAny ~}}